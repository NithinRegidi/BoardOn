<% layout("../layouts/boilerplate") %>

<div class="container py-5">
  <div class="row">
    <div class="col-lg-6">
      <!-- Image Section -->
      <div class="card shadow-sm border-0">
        <img src="<%= listings.image %>" class="card-img-top" alt="<%= listings.title %>" style="height: 300px; object-fit: cover;">
      </div>
    </div>
    <div class="col-lg-6">
      <!-- Details Section -->
      <h2 class="text-primary fw-bold mb-3"><%= listings.title %></h2>
      <p class="text-muted mb-4"><%= listings.description %></p>
      
      <ul class="list-group mb-4">
        <li class="list-group-item">
          <strong>Price:</strong> &#8377;<%= listings.price.toLocaleString("en-IN") %>
        </li>
        <li class="list-group-item">
          <strong>Location:</strong> <%= listings.location %>
        </li>
        <li class="list-group-item">
          <strong>Country:</strong> <%= listings.country %>
        </li>
      </ul>

      <!-- Action Buttons -->
      <div class="d-flex gap-3 mb-4">
        <a href="/listings/<%= listings._id %>/edit" class="btn btn-primary">
          <i class="fas fa-edit me-2"></i>Edit Listing
        </a>
        <form action="/listings/<%= listings._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">
            <i class="fas fa-trash-alt me-2"></i>Delete Listing
          </button>
        </form>
      </div>

      <!-- Back to Home Button -->
      <a href="/listings" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Home
      </a>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f8f9fa; /* Light gray background */
  }

  .card {
    border-radius: 15px;
    overflow: hidden;
  }

  .btn-primary {
    background: linear-gradient(135deg, #1e90ff, #0066cc);
    border: none;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #0066cc, #1e90ff);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 102, 204, 0.4);
  }

  .btn-danger {
    background: linear-gradient(135deg, #ff4d4d, #ff0000);
    border: none;
    transition: all 0.3s ease;
  }

  .btn-danger:hover {
    background: linear-gradient(135deg, #ff0000, #ff4d4d);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 0, 0, 0.4);
  }

  .btn-secondary {
    background: linear-gradient(135deg, #6c757d, #495057);
    border: none;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: linear-gradient(135deg, #495057, #6c757d);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
  }

  h2 {
    font-size: 2rem;
    font-weight: bold;
  }

  .list-group-item {
    font-size: 1rem;
    border: none;
    padding: 0.75rem 1.25rem;
    background-color: #f8f9fa;
  }

  .list-group-item strong {
    color: #333;
  }
</style>