<% layout("../layouts/boilerplate") %>

<div class="container py-5">
  <h3 class="text-center text-primary mb-4">Edit This Listing</h3>
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="shadow p-4 rounded bg-light">
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" id="title" name="title" class="form-control" value="<%= listing.title %>" required>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <textarea id="description" name="description" class="form-control" rows="4" required><%= listing.description %></textarea>
    </div>

    <!-- Image URL -->
    <div class="mb-3">
      <label for="image" class="form-label">Image URL:</label>
      <input type="url" id="image" name="image" class="form-control" value="<%= listing.image %>">
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label for="price" class="form-label">Price:</label>
      <input type="number" id="price" name="price" class="form-control" value="<%= listing.price %>" min="0" required>
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label for="location" class="form-label">Location:</label>
      <input type="text" id="location" name="location" class="form-control" value="<%= listing.location %>" required>
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label for="country" class="form-label">Country:</label>
      <input type="text" id="country" name="country" class="form-control" value="<%= listing.country %>" required>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-save me-2"></i>Update Listing
      </button>
    </div>
  </form>
</div>

<style>
  body {
    background-color: #f8f9fa; /* Light gray background */
  }

  .form-control {
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .form-control:focus {
    border-color: #1e90ff;
    box-shadow: 0 0 5px rgba(30, 144, 255, 0.5);
  }

  .btn-primary {
    background: linear-gradient(135deg, #1e90ff, #0066cc);
    border: none;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #0066cc, #1e90ff);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 102, 204, 0.4);
  }

  .shadow {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  h3 {
    font-weight: bold;
  }
</style>