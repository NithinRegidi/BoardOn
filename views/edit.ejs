<% layout("../layouts/boilerplate") %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <!-- Header Section -->
      <div class="text-center mb-4">
        <h2 class="text-primary fw-bold mb-2">Edit Listing</h2>
        <p class="text-muted">Update the details of your property</p>
      </div>

      <!-- Form Section -->
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="row g-3 needs-validation shadow-lg p-4 rounded-4 bg-white" novalidate>
        
        <!-- Title Field -->
        <div class="col-12">
          <label for="title" class="form-label fw-semibold">
            <i class="fas fa-home text-primary me-2"></i>Property Title
          </label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            class="form-control form-control-lg" 
            value="<%= listing.title %>" 
            placeholder="e.g., Cozy Beachfront Villa in Goa" 
            minlength="5"
            maxlength="100"
            required
          >
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a title (5-100 characters).
          </div>
        </div>

        <!-- Description Field -->
        <div class="col-12">
          <label for="description" class="form-label fw-semibold">
            <i class="fas fa-align-left text-primary me-2"></i>Description
          </label>
          <textarea 
            id="description" 
            name="description" 
            class="form-control" 
            rows="4" 
            placeholder="Describe your property, amenities, and what makes it special..."
            minlength="20"
            maxlength="1000"
            required
          ><%= listing.description %></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a description (20-1000 characters).
          </div>
        </div>

        <!-- Image URL Field -->
        <div class="col-12">
          <label for="image" class="form-label fw-semibold">
            <i class="fas fa-camera text-primary me-2"></i>Image URL
          </label>
          <input 
            type="url" 
            id="image" 
            name="image" 
            class="form-control" 
            value="<%= listing.image %>" 
            placeholder="https://example.com/your-image.jpg"
          >
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid image URL.
          </div>
        </div>

        <!-- Price Field -->
        <div class="col-md-6">
          <label for="price" class="form-label fw-semibold">
            <i class="fas fa-rupee-sign text-primary me-2"></i>Price per Night
          </label>
          <div class="input-group has-validation">
            <span class="input-group-text bg-primary text-white">
              <i class="fas fa-rupee-sign"></i>
            </span>
            <input 
              type="number" 
              id="price" 
              name="price" 
              class="form-control form-control-lg" 
              value="<%= listing.price %>" 
              min="100" 
              max="100000"
              placeholder="2500" 
              required
            >
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please enter a valid price (₹100 - ₹1,00,000).
            </div>
          </div>
        </div>

        <!-- Location Field -->
        <div class="col-md-6">
          <label for="location" class="form-label fw-semibold">
            <i class="fas fa-map-marker-alt text-primary me-2"></i>Location/City
          </label>
          <input 
            type="text" 
            id="location" 
            name="location" 
            class="form-control form-control-lg" 
            value="<%= listing.location %>" 
            placeholder="e.g., Mumbai, Goa, Jaipur" 
            minlength="2"
            maxlength="50"
            required
          >
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please provide a valid location.
          </div>
        </div>

        <!-- Country Field -->
        <div class="col-md-6">
          <label for="country" class="form-label fw-semibold">
            <i class="fas fa-globe text-primary me-2"></i>Country
          </label>
          <input 
            type="text" 
            id="country" 
            name="country" 
            class="form-control form-control-lg" 
            value="<%= listing.country %>" 
            placeholder="e.g., India, United States" 
            required
          >
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please select a country.
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="col-12 text-center mt-4">
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a href="/listings" class="btn btn-outline-secondary btn-lg px-4">
              <i class="fas fa-arrow-left me-2"></i>Cancel
            </a>
            <button type="submit" class="btn btn-primary btn-lg px-5">
              <i class="fas fa-save me-2"></i>Update Listing
            </button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>

<style>
  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
  }

  .form-control, .form-select {
    border: 2px solid #e9ecef;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .form-control:focus, .form-select:focus {
    border-color: #1e90ff;
    box-shadow: 0 0 0 0.2rem rgba(30, 144, 255, 0.15);
    transform: translateY(-1px);
  }

  .form-control-lg, .form-select-lg {
    padding: 0.75rem 1rem;
    font-size: 1.1rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #1e90ff 0%, #0066cc 100%);
    border: none;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #0066cc 0%, #1e90ff 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(30, 144, 255, 0.3);
  }

  .btn-outline-secondary {
    border: 2px solid #6c757d;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-outline-secondary:hover {
    transform: translateY(-1px);
  }

  .shadow-lg {
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.1) !important;
  }

  .rounded-4 {
    border-radius: 1.5rem !important;
  }

  .form-label {
    color: #495057;
    margin-bottom: 0.5rem;
  }

  h2 {
    color: #2c3e50;
  }

  .valid-feedback, .invalid-feedback {
    font-size: 0.875rem;
    font-weight: 500;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container {
      padding: 1rem !important;
    }
    
    .form-control-lg, .form-select-lg {
      font-size: 1rem;
    }
    
    .btn-lg {
      padding: 0.5rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>