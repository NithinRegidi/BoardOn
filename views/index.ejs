<% layout("../layouts/boilerplate") %>

<div class="container-fluid px-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="display-5 fw-bold text-primary mb-1">Discover Amazing Stays</h1>
          <p class="text-muted mb-0">Find your perfect accommodation from our curated collection</p>
        </div>
        <div>
          <a href="/listings/new" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Add New Listing
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Listings Cards Grid -->
  <div class="row g-4">
    <% for(let list of Listings) { %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card h-100 shadow-sm border-0 listing-card">
          <!-- Image -->
          <div class="card-img-wrapper">
            <img src="<%= list.image %>" class="card-img-top listing-img" alt="<%= list.title %>">
            <div class="price-badge">
              â‚¹<%= list.price.toLocaleString('en-IN') %>
            </div>
          </div>
          
          <!-- Card Body -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold text-dark mb-2"><%= list.title %></h5>
            <p class="card-text text-muted flex-grow-1">
              <%= list.description.length > 100 ? list.description.substring(0, 100) + '...' : list.description %>
            </p>
            
            <!-- Location -->
            <div class="location-info mb-3">
              <i class="fas fa-map-marker-alt text-danger me-2"></i>
              <span class="text-muted"><%= list.location %>, <%= list.country %></span>
            </div>
            
            <!-- Action Buttons -->
            <div class="card-actions mt-auto">
              <a href="/listings/<%= list._id %>" class="btn btn-primary flex-fill">
                <i class="fas fa-eye me-2"></i>View Details
              </a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Empty State (if no listings) -->
  <% if (Listings.length === 0) { %>
    <div class="row">
      <div class="col-12 text-center py-5">
        <i class="fas fa-home fa-5x text-muted mb-4"></i>
        <h3 class="text-muted">No listings found</h3>
        <p class="text-muted mb-4">Be the first to add a listing to our platform!</p>
        <a href="/listings/new" class="btn btn-primary btn-lg">
          <i class="fas fa-plus-circle me-2"></i>Add First Listing
        </a>
      </div>
    </div>
  <% } %>
</div>

<style>
  .listing-card {
    transition: all 0.3s ease;
    border-radius: 15px;
    overflow: hidden;
  }
  
  .listing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
  }
  
  .card-img-wrapper {
    position: relative;
    overflow: hidden;
  }
  
  .listing-img {
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .listing-card:hover .listing-img {
    transform: scale(1.05);
  }
  
  .price-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: linear-gradient(135deg, #1e90ff 0%, #0066cc 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 25px;
    font-weight: bold;
    box-shadow: 0 4px 15px rgba(30, 144, 255, 0.3);
  }
  
  .card-title {
    font-size: 1.25rem;
    line-height: 1.3;
  }
  
  .card-text {
    font-size: 0.95rem;
    line-height: 1.5;
  }
  
  .location-info {
    font-size: 0.9rem;
  }
  
  .card-actions .btn {
    border-radius: 10px;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .card-actions .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(30, 144, 255, 0.4);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .display-5 {
      font-size: 2rem;
    }
    
    .listing-img {
      height: 200px;
    }
  }
</style>